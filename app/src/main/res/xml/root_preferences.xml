<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ListPreference
        android:defaultValue="@string/pref_default_refresh_time"
        android:entries="@array/pref_refresh_time_titles"
        android:entryValues="@array/pref_refresh_time_values"
        android:key="@string/pref_refreshing_time"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_refresh_time" />

    <PreferenceCategory app:title="Location settings">
        <EditTextPreference
            app:key="latitude"
            app:title="Latitude: "
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:key="longitude"
            app:title="Longitude: "
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>
